{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for contact-points.json",
  "type": "object",
  "patternProperties": {
    "^[A-Z-]+$": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "contactPoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "carrier": {
                "type": "string"
              },
              "address": {
                "type": "object",
                "properties": {
                  "street": {
                    "type": "string"
                  },
                  "postalCode": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  }
                }
              },
              "contact": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "email": {
                    "type": "string"
                  },
                  "web": {
                    "type": "string"
                  }
                }
              },
              "openingHours": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "comment": {
                    "type": "string"
                  },
                  "openingHoursLastUpdated": {
                    "type": "string",
                    "format": "date"
                  },
                  "structured": {
                    "type": "object",
                    "patternProperties": {
                      "^(mon|tue|wed|thu|fri|sat|sun)$": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "download": {
                "text": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "social": {
                "type": "object",
                "properties": {
                  "facebook": {
                    "type": "string"
                  },
                  "instagram": {
                    "type": "string"
                  },
                  "linkedin": {
                    "type": "string"
                  }
                }
              }
            },
            "required": [
              "id",
              "name"
            ]
          }
        }
      },
      "required": [
        "fullName"
      ]
    }
  }
}
